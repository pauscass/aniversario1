  <script>
    const correctDate = "2016-11-12";
    const startTime = new Date("2016-11-12T16:00:00");

    function showScreen(current, next) {
      document.getElementById(current).classList.add("hidden");
      document.getElementById(next).classList.remove("hidden");
    }

    function checkDate() {
      const input = document.getElementById("anniversaryInput").value;
      const error = document.getElementById("error");
      if (input === correctDate) {
        showScreen("screen1", "screen2");
        startCountdown();
      } else {
        error.textContent = "쯉eguro recuerdas cu치ndo empez칩 nuestra historia? 游땤";
      }
    }

    function startCountdown() {
      const countdown = document.getElementById("countdown");
      setInterval(() => {
        const now = new Date();
        const diff = now - startTime;
        const years = Math.floor(diff / (1000 * 60 * 60 * 24 * 365.25));
        const months = Math.floor((diff % (1000 * 60 * 60 * 24 * 365.25)) / (1000 * 60 * 60 * 24 * 30.44));
        const days = Math.floor((diff % (1000 * 60 * 60 * 24 * 30.44)) / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((diff / (1000 * 60)) % 60);
        const seconds = Math.floor((diff / 1000) % 60);
        countdown.textContent = `${years} a침os, ${months} meses, ${days} d칤as, ${hours}h ${minutes}m ${seconds}s`;
      }, 1000);
    }

    function showNowPhoto() {
      const img = document.getElementById("photo");
      img.src = "ahora.jpg";
      img.alt = "Nosotros ahora";
      img.onclick = null;
      setTimeout(() => showScreen("screen2", "screen3"), 1500);
    }

    document.addEventListener("DOMContentLoaded", () => {
      document.getElementById("heartButton").addEventListener("click", () => {
        showScreen("screen3", "screen4");
      });
    });

    function checkSecret() {
      const secret = document.getElementById("secretInput").value.trim().toLowerCase();
      const error = document.getElementById("secretError");
      if (secret === "nutria") {
        showScreen("screen4", "screen5");
      } else {
        error.textContent = "Mmm... esa no es la palabra secreta 游삑";
      }
    }
  </script>
